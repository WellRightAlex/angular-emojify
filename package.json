{
  "name": "@WellRightAlex/angular-emojify",
  "version": "2.0.0",
  "description": "Angular Pipe that replaces all :emoji: with the actual emoji",
  "main": "./build/bundles/emojify.umd.js",
  "module": "./build/index.js",
  "jsmain:next": "./build/index.js",
  "typings": "./build/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WellRightAlex/angular-emojify.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/WellRightAlex"
  },
  "bugs": {
    "url": "https://github.com/WellRightAlex/angular-emojify/issues"
  },
  "homepage": "https://github.com/WellRightAlex/angular-emojify#readme",
  "scripts": {
    "test": "jest",
    "clean": "rimraf build/",
    "prebuild": "npm run clean",
    "build": "./node_modules/.bin/ngc -p tsconfig.build.json",
    "postbuild": "npm run bundle",
    "bundle": "rollup -c",
    "prepublish": "npm run build"
  },
  "keywords": ["angular", "angular2", "pipe", "emoji", "emojify", "transform"],
  "author": "Kamil Kisiela <kamil.kisiela@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@angular/compiler": "^13.0.0",
    "@angular/compiler-cli": "^13.0.0",
    "@angular/core": "^13.0.0",
    "@types/jest": "^28.0.0",
    "jest": "^28.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rxjs": "^7.4.0",
    "ts-jest": "^28.0.0",
    "typescript": "~4.6.0",
    "zone.js": "~0.11.4"
  },
  "dependencies": {
    "node-emoji": "^1.8.1"
  },
  "peerDependencies": {
    "@angular/core": "^13.0.0",
    "rxjs": "^7.4.0",
    "zone.js": "~0.11.4"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.test.json"
    },
    "moduleFileExtensions": ["js", "ts", "json"],
    "testRegex": "(/tests/.*\\.(test|spec))\\.ts$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "browser": true
  }
}
